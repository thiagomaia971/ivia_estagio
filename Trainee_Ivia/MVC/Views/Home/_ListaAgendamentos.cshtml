@helper montarRow(Agendamento agendamento)
{ 
           
    <tr class="hover-row-color" data-row-status=agendamento.Status>
        <td class="hover-row-text protocolo">agendamento.Paciente.Protocolo</td>
        <td class="hover-row-text">agendamento.Paciente.Nome</td>

        if (((int)agendamento.Status) == 1)
        {
            <td data-row-action="cancelar"
                data-row-protocol=agendamento.Paciente.Protocolo
                data-row-date=agendamento.DiaDoAgendamento>
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            </td>
        }
        else if (((int)agendamento.Status) == 2)
        {
            if (agendamento.DiaDoAgendamento.Date.CompareTo(DateTime.Today.Date) >= 0)
            {
                <td data-row-action="reagendar"
                    data-row-protocol=agendamento.Paciente.Protocolo
                    data-row-date=agendamento.DiaDoAgendamento>
                    <span class="glyphicon glyphicon-repeat" aria-hidden="true"></span>
                </td>
            }
            else
            {
                <td></td>
            }
        }
                                    
    </tr>
    
}

