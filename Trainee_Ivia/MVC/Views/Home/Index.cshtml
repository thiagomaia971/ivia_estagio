            <div class="panel-heading">
                <label for="InputData" class="panel-tittle">Busca</label>
            </div>
            <div class="panel-body">
                <div class="row">
                    @*<form class="form-inline ">*@
                    <div class="form-group col-md-6 col-md-offset-3">
                        <div class="input-group ">
                            <input type="text" class="form-control form_datetime" id="InputData" readonly placeholder="dd/mm/yyyy">
                            <div class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></div>
                        </div>
                    </div>
                    @*</form>*@
                </div>

                <div class="row">

                    <div class="col-lg-6 col-md-offset-3">
                        <div class="input-group form-group">

                            @*@Html.TextBoxFor(p => p.SearchEntity.Nome, new
                       {
                           @class = "form-control",
                           placeholder = "Digite o nome do paciente..."
                       })*@

                            <span class="input-group-btn">
                                <button id="btnSearch" class="btn btn-success" data-pdsa-action="search">
                                    <span class="glyphicon glyphicon-search"></span>
                                </button>
                            </span>

                        </div>
                    </div>

                </div>
                <br />
                <div class="row">

                    <div class="col-md-4 col-md-offset-4">

                        <button id="btnAdd" class="btn btn-primary" data-pdsa-action="add">
                            <span class="glyphicon glyphicon-plus-sign"></span> Adicionar
                        </button>

                        <button id="btnClear" class="btn btn-danger" data-pdsa-action="clear">
                            <span class="glyphicon glyphicon-erase"></span> Limpar
                        </button>

                        <button id="btnPrint" class="btn btn-success" data-pdsa-action="print">
                            <span class="glyphicon glyphicon-print"></span> Imprimir
                        </button>

                    </div>
                </div>

            </div>
        </div>
    }
    <!-- END SEARCH BLOCK-->

    <!-- BEGIN DETAIL BLOCK-->
