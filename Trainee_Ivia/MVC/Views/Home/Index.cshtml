@{
    ViewBag.Title = "Lista de Pacientes";
}

@using (Ajax.BeginForm(
                    new AjaxOptions
                    {
                        HttpMethod = "post",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "list-container"
                    }))
{

