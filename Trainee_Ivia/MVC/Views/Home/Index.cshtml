                <div class="form-group">
                    @Html.LabelFor(m => m.NovoPaciente.DataNascimento)
                    @Html.TextBoxFor(m => m.NovoPaciente.DataNascimento, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.Label("Sexo: ")
                    @Html.DropDownListFor(m => m.NovoPaciente.Sexo, new[] {
                        new SelectListItem() { Text = "Outro", Value = ((char) Core.SexoEnum.Outro).ToString(), Selected = true },
                        new SelectListItem() { Text = Core.SexoEnum.Homem.ToString(), Value = ((char) Core.SexoEnum.Homem).ToString() },
                        new SelectListItem() { Text = Core.SexoEnum.Mulher.ToString(), Value = ((char) Core.SexoEnum.Mulher).ToString() }
                        }, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.NovoPaciente.Altura)
                    @Html.TextBoxFor(m => m.NovoPaciente.Altura, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.NovoPaciente.Peso)
                    @Html.TextBoxFor(m => m.NovoPaciente.Peso, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.Label("Tipo de Tratamento: ")
                    @Html.DropDownListFor(m => m.NovoPaciente.TipoTratamento, new[] {
                        new SelectListItem() { Text = "Escolha uma opção...", Value = ((int) Core.TipoAtendimentoEnum.Opcao).ToString(), Selected = true, Disabled = true },
                        new SelectListItem() { Text = "Quimioterapia Dia", Value = ((int) Core.TipoAtendimentoEnum.Quimioterapia_Dia).ToString() },
                        new SelectListItem() { Text = "Quimioterapia Sequencial", Value = ((int) Core.TipoAtendimentoEnum.Quimioterapia_Sequencial).ToString() },
                        new SelectListItem() { Text = "Procedimento", Value = ((int)Core.TipoAtendimentoEnum.Procedimento).ToString()},
                        new SelectListItem() { Text = "Intercorrencia", Value = ((int)Core.TipoAtendimentoEnum.Intercorrencia).ToString() }
                        }, new { @class = "form-control" })
                </div>

                <div class="panel-footer">
                    <div class="row">
                        <div class="col-sm-12">
                            <button id="btnSave" class="btn btn-success" data-pdsa-action="save">
                                <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
                            </button>

                            <button id="btnCancel" class="btn btn-danger" formnovalidate="formnovalidate" data-pdsa-action="cancel">
                                <span class="glyphicon glyphicon-remove-circle"></span> Cancelar
                            </button>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    }*@

    <!-- END DETAIL BLOCK-->

    <!-- LIST BLOCK-->
    if (Model.IsListAreaVisible)
    {
        <div id="list-container" class="panel panel-lightgreen">

            @Html.Partial("_Pacientes", Model)

        </div>
    }
    <!-- END LIST BLOCK-->
}




